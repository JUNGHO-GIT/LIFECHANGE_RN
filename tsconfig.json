{
  "compilerOptions": {

    /** 기본 설정 *********************************************************************************/
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM", "WebWorker", "ScriptHost", "ESNext.AsyncIterable"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-native",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "composite": true,
    "incremental": true,

    /** 타입 체크 *********************************************************************************/
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /** 추가 설정 *********************************************************************************/
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    /** 모듈 해석 *********************************************************************************/
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@env": ["./src/assets/types/env"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/assets/types"
    ],
    "types": [
      "env"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /** 소스 코드 관리 ****************************************************************************/
    "allowUmdGlobalAccess": false,
    "preserveSymlinks": true,
    "isolatedModules": false,

    /** 컴파일러 경고 제어 ************************************************************************/
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /** 고급 설정 *********************************************************************************/
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "removeComments": false,
    "noEmit": true,
    "noEmitOnError": true,
    "disableSizeLimit": false,
    "plugins": [],
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "./src/**/*",
    "./src/assets/types/env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}