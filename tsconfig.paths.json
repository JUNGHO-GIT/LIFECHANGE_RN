{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@images/*": ["src/assets/images/*"],
      "@types/*": ["src/assets/types/*"],
      "@schemas/*": ["src/schemas/*"],
      "@containers/*": ["src/containers/*"],
      "@widgets/*": ["src/widgets/*"],
      "@imports/*": ["src/imports/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/assets/types"
    ],
    "types": [
      "node",
      "alias",
      "global",
      "extension"
    ],
  },
  "include": [
    "index.js",
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.d.ts",
    "babel.config.*",
    "metro.config.*",
    "**/dist/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}